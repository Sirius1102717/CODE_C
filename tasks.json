{
    "tasks": [
        {
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-stdlib=libc++",
                "-fuse-ld=lld",
                "-std=c11",
                "-pthread",
                "-fstandalone-debug",
                "-Wextra",
                "-fcolor-diagnostics",
                "-fparse-all-comments",
                "-fno-limit-debug-info"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
